@model PagedList.Core.IPagedList<WebApplication1.ViewModels.UnitsListViewModel>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>Id</th>
            <th>Unit Name</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var unit in Model)
            {
                <tr>
                    <td>
                        #@unit.UnitID
                    </td>
                    <td>
                        <div class="d-flex align-items-center">
                            <strong>@unit.UnitName</strong>
                        </div>
                    </td>
                    <td>
                        @if (unit.IsActive == true)
                        {
                            <div class="d-flex align-items-center">
                                <div class="badge badge-success badge-dot m-r-10"></div>
                                <div>Active</div>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex align-items-center">
                                <div class="badge badge-danger badge-dot m-r-10"></div>
                                <div>Non-Active</div>
                            </div>
                        }
                    </td>
                    <td class="text-right">
                        <a class="btn btn-icon btn-hover btn-sm btn-rounded" onclick="return confirm('Are you sure?')" asp-action="DeleteUnit" asp-area="Admin" asp-controller="AdminWarehouse" asp-route-id="@unit.UnitID">
                            <i class="anticon anticon-delete"></i>
                        </a>
                        <a class="btn btn-icon btn-hover btn-sm btn-rounded pull-right" asp-controller="AdminWarehouse" asp-area="Admin" asp-action="UpdateUnit" asp-route-id="@unit.UnitID">
                            <i class="anticon anticon-edit"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>