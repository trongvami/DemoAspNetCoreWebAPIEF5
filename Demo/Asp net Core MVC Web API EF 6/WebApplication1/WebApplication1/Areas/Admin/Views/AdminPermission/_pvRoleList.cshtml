@model PagedList.Core.IPagedList<WebApplication1.ViewModels.RoleListViewModel>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>ID</th>
            <th>Name</th>
            @*<th>ConcurrencyStamp</th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var role in Model)
            {
                <tr>
                    <td>
                        #@role.Id
                    </td>
                    <td>
                        <div class="d-flex align-items-center">
                            <strong>@role.Name</strong>
                        </div>
                    </td>
                    @*<td>@role.ConcurrencyStamp</td>*@
                    <td class="text-right">
                        <button class="btn btn-icon btn-hover btn-sm btn-rounded pull-right" onclick="ShowInPupupRole('@Url.Action("AddorEdit","AdminPermission", new {id=role.Id} , Context.Request.Scheme)', 'Update Role');return false;">
                            <i class="anticon anticon-edit"></i>
                        </button>
                        <a class="btn btn-icon btn-hover btn-sm btn-rounded" onclick="return confirm('Are you sure?')" asp-action="DeleteRole" asp-area="Admin" asp-controller="AdminPermission" asp-route-id="@role.Id">
                            <i class="anticon anticon-delete"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>