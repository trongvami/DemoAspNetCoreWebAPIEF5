@model PagedList.Core.IPagedList<WebApplication1.ViewModels.EmployeesListViewModel>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>Id</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        #@user.id
                    </td>
                    <td>
                        <div class="d-flex align-items-center">
                            <strong>@user.fullname</strong>
                        </div>
                    </td>
                    <td>
                        @user.email
                    </td>
                    <td>
                        @user.role
                    </td>
                    <td class="text-right">
                        <button class="btn btn-icon btn-hover btn-sm btn-rounded pull-right" onclick="ShowInPupupRole('@Url.Action("AddorEdit","AdminPermission", new {id=user.id} , Context.Request.Scheme)', 'Update Role');return false;">
                            <i class="anticon anticon-edit"></i>
                        </button>
                        <a class="btn btn-icon btn-hover btn-sm btn-rounded" onclick="return confirm('Are you sure?')" asp-action="DeleteRole" asp-area="Admin" asp-controller="AdminPermission" asp-route-id="@user.id">
                            <i class="anticon anticon-delete"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>